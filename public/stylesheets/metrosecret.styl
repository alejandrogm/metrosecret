body
	font: 16px SegoeWP, sans-serif
	color white
	
@font-face
	font-family SegoeWP
	font-style normal
	font-weight 400
	src url('font/SegoeWP.ttf')
	
@font-face
	font-family SegoeWP
	font-style normal
	font-weight 300
	src url('font/SegoeWP-Light.ttf')
	
@font-face
	font-family SegoeWP
	font-style normal
	font-weight 700
	src url('font/SegoeWP-Bold.ttf')	
	
@font-face
	font-family SegoeWP
	font-style normal
	font-weight 600
	src url('font/SegoeWP-Semibold.ttf')	
	
lime = rgb(164, 196, 0)
green = rgb(96, 169, 23)
emerald = rgb(0, 138, 0)
