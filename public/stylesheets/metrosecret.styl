.container
	margin 0 auto
	padding-bottom 0.5em
	width 432px
	
.pull-left
	float left
	
.push-button
	border 3px solid white
	display inline-block
	height 22px
	font-size 1.25em
	min-width 100px
	margin 0 0.5em 0.5em 0
	padding 10px 15px
	text-align center
	
.push-button:hover
.push-button:active
	background cyan
	
.push-button.disabled
	border-color rgba(255,255,255,0.4)
	color rgba(255,255,255,0.4)
	
.row
	clear both
	overflow hidden
	text-align center
	
.span1
	float left
	height 99px
	width 22.92%
	
.span1:first-child
	margin-left 0
	
